<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trivia HomePage</title>
    <link rel="stylesheet" href="../../styles/triviaHome.css" />
    <script defer src="../../scripts/triviaHome.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div id="container">
      <!-- Video for Background -->
      <video autoplay loop muted playsinline class="background-clip">
        <source
          src="../Images/backGrounds/aesthetic-landscape-with-train.1920x1080.mp4"
          type="video/mp4"
        />
        Your browser does not support the video tag.
      </video>
      <!-- NavBar Section -->
      <div class="header">
        <a href="../index.html" class="navigation"
          >P.Mountain<img src="../Images/Icons/mont-blanc.png" alt="" width="32"
          height="32"</a
        >
        <a href="../pages/pokeRun.html" class="navigation"
          >Pok√©manz<img src="../Images/Icons/pokemon-go.png" width="32"
          height="32" alt=""</a
        >
        <a href="http://localhost:3000/triviaHome" class="navigation"
          >T.Express<img src="../Images/Icons/rail.png" alt="" width="32"
          height="32"</a
        >
        <a href="../pages/Newsletter.html" class="navigation"
          >Newsletter<img src="../Images/Icons/letter.png" alt="" width="32"
          height="32"</a
        >
        <a href="#"
          ><img
            src="../Images/Icons/triviaExpress1.webp"
            alt="Light Switch"
            class="switch"
            id="toggle-mode"
        /></a>
      </div>
      <div class="title">Trivia Express</div>

      <!-- Quiz Form -->
      <div id="questionBar">
        <form action="/triviaGame" method="POST">
          <!-- Parameter for Questions# -->

          <input
            type="number"
            id="amount"
            name="amount"
            min="1"
            placeholder="Questions #"
            required
          />
          <!-- Categories -->
          <select name="category" id="category">
            <option value="">Trivia!</option>
            <!-- None Api Question Category -->
            <option
              value="custom"
              data-title="Custom Questions"
              data-desc="Test your wits with common knowledge trivia!"
              data-img="../Images/Icons/mont-blanc.png"
            >
              Custom Questions
            </option>

            <!-- API Category -->
            <option
              value="9"
              data-title="General Knowledge"
              data-desc="Test your wits with common knowledge trivia!"
              data-img="../Images/Icons/mont-blanc.png"
            >
              General Knowledge
            </option>
            <option
              value="27"
              data-title="Animals"
              data-desc="Trivia about animals of all kinds!"
              data-img="../../public/Images/black-glow-hexagon-white-purple-gradient-2560x1700-c4-000000-ffffff-8a2be2-000000-l2-10-132-a-15-f-6.svg"
            >
              Animals
            </option>
            <option
              value="32"
              data-title="Cartoons & Animations"
              data-desc="Explore the world of animated shows and movies!"
              data-img="/images/cartoons.jpg"
            >
              Cartoons & Animations
            </option>
            <option
              value="29"
              data-title="Comics"
              data-desc="Questions about your favorite comic characters and stories!"
              data-img="/images/comics.jpg"
            >
              Comics
            </option>
            <option
              value="31"
              data-title="Anime & Manga"
              data-desc="Dive into Japanese animation and manga trivia!"
              data-img="/images/anime.jpg"
            >
              Anime & Manga
            </option>
            <option
              value="20"
              data-title="Mythology"
              data-desc="Explore the legends and myths of the world!"
              data-img="/images/mythology.jpg"
            >
              Mythology
            </option>
            <option
              value="15"
              data-title="Video Games"
              data-desc="Test your gaming knowledge with video game trivia!"
              data-img="/images/videogames.jpg"
            >
              Video Games
            </option>
          </select>
          <!-- Difficulty -->
          <select name="difficulty" id="difficulty">
            <option value="easy">Over-Easy</option>
            <option value="medium">Medium-SideUp</option>
            <option value="hard">Hard-Boiled</option>
          </select>
          <!-- Button to submit form -->
          <button>Start Game!</button>
          <a href="http://localhost:3000/triviaGame/manage"
            >Make your own Questions?</a
          >
        </form>
      </div>
      <!-- Card Container -->
      <div id="cards-container">
        <% categories.forEach((category) => { %>
        <div class="card">
          <div class="card-inner">
            <!-- Card Front -->
            <div class="card-front">
              <h3><%= category.title %></h3>
              <img src="<%= category.image %>" alt="<%= category.title %>" />
            </div>

            <!-- Card Back -->
            <div class="card-back">
              <p><%= category.description %></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
